            <a href="../category/{{.}}">
                {{.}}
            </a>,
            {{end}}
        </div>

        <p class="date">Created: {{.Metadata.Created}}        Updated: {{.Metadata.Updated}}</p>


        <hr>

        {{.Content}}

        <hr>
        <p>Contact me via email.</p>
        <p>Email: <a href=mailto:drsl@drshapeless.com>drsl@drshapeless.com</a>
        </p>
    </body>
</html>
